<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



    <style name="ConfirmButton" >
        <item name="android:background">@drawable/confirm_bt</item>
    </style>
    <style name="loginButton">
        <item name="android:background">@drawable/button_select</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="customTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="overflowButton" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/learnmore</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>
    <declare-styleable name="myImageView">
        <attr name="borderColor" format="color"/>
        <attr name="borderWith" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
    </declare-styleable>
</resources>
